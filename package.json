{
  "name": "StudentRecords",
  "version": "0.0.1",
  "description": "A server that retrieves student records from a database",
  "main": "index.js",
  "repository": "git@github.com:reccanti/StudentRecords.git",
  "author": "Ben Wilcox <reccanti@gmail.com>",
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "test": "NODE_ENV=TEST mocha",
    "test:cover": "nyc --reporter=html -x **/*.spec.ts npm test",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "@types/chai": "^3.5.1",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.23",
    "@types/koa-router": "^7.0.22",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.13",
    "@types/supertest": "^2.0.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.3.0",
    "nyc": "^10.2.0",
    "sinon": "^2.2.0",
    "sinon-as-promised": "^4.0.3",
    "supertest": "^3.0.0",
    "ts-node": "^3.0.2",
    "typescript": "^2.2.2"
  },
  "dependencies": {
    "knex": "^0.12.9",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.1.1",
    "mariasql": "^0.2.6"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "dist"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
